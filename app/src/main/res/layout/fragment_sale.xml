<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@android:color/holo_green_light"
    tools:context="com.youstar.f_connect.Fragments.Sale">
    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:orientation="vertical"
        android:paddingRight="20dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Post a Product for sale"
            android:textStyle="bold"
            android:textSize="14pt"
            android:textAlignment="center"/>


    <android.support.design.widget.TextInputLayout
    android:layout_width="match_parent"
        android:id="@+id/layoutname"
        android:layout_marginTop="4dp"
        app:errorEnabled="true"
        android:layout_marginBottom="4dp"
    android:layout_height="wrap_content">
    <android.support.design.widget.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/productName"
        android:hint="Product Name"/>
</android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginTop="4dp"
        android:id="@+id/layoutproductname"
        app:errorEnabled="true"
        android:layout_marginBottom="4dp"
        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/productDesc"
            android:hint="Product Description(Give more details)"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        app:errorEnabled="true"
        android:id="@+id/layoutprice"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/productPrice"
            android:inputType="number"
            android:hint="Product Price in Kshs"/>
    </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            app:errorEnabled="true"
            android:id="@+id/layoutquantity"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/productquantity"
                android:inputType="number"
                android:hint="Quantity Being Sold"/>
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="0dp"
            android:layout_margin="20dp"
            android:padding="12dp"
            android:background="@color/colorAccent"
            android:id="@+id/btnPostproduct"

            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Post Product"/>
        <Button
            android:layout_width="0dp"
            android:layout_margin="20dp"
            android:padding="12dp"
            android:layout_weight="1"
            android:id="@+id/btnDiscard"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_red_light"
            android:text="Discard"/>
    </LinearLayout>

</LinearLayout>
